@model IEnumerable<ARP.CustomerApp.Entity.Customer>
@using ARP.CustomerApp.WebUI.Extensions

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<div class="main-content mt-3">
    <table class="table table-hover table-items-vcentred">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    Address
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Postcode)
                </th>
                <th class="col-1"><a asp-action="Create" class="btn btn-outline-primary w-100">New</a></th>
                <th class="col-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @item.FormatAddress()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Postcode)
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-primary w-100">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger w-100">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>